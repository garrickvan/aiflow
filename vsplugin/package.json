{
  "name": "aiflow-vscode",
  "displayName": "AiFlow VSCode Plugin",
  "description": "Auto open local dev server",
  "version": "0.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/garrick-g/aiflow.git",
    "directory": "vsplugin"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "resources/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "aiflow.openInBrowser",
        "title": "在浏览器中打开",
        "category": "AiFlow",
        "icon": "$(globe)"
      },
      {
        "command": "aiflow.refreshServers",
        "title": "刷新服务状态",
        "category": "AiFlow",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiflow-container",
          "title": "智流MCP",
          "icon": "resources/activitybar-icon.svg"
        }
      ]
    },
    "views": {
      "aiflow-container": [
        {
          "type": "webview",
          "id": "aiflow.sidebar",
          "name": "管理后台",
          "when": "true",
          "icon": "$(settings-gear)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.7.1",
    "sharp": "^0.34.5",
    "typescript": "^4.9.4"
  }
}
